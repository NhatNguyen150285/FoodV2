<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DrinksDetailsActivity"
    android:background="@color/white">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/details_img"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/coca"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/details_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/details_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Coca Cola"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="26dp"
        />

    <TextView
        android:id="@+id/details_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/details_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="10.000d"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="26dp"
        />

    <TextView
        android:id="@+id/details_stocks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/details_price"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Con hang"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="26dp"
        />

</RelativeLayout>