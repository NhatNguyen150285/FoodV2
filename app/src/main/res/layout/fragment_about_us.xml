<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".CategoriesFragment"
    android:orientation="vertical"
    android:padding="10dp"

    >

    <!-- TODO: Update blank fragment layout -->



        <TextView
            android:id="@+id/txtView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONTACT WITH US"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="#FF5722"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            />
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <ImageButton
               android:id="@+id/fbButton"
               android:layout_width="50dp"
               android:layout_height="50dp"
               android:src="@drawable/fblogo"
               android:scaleType="fitXY"
               android:background="@null"
               android:layout_margin="10dp"
               />
           <TextView
               android:id="@+id/txtView2"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Facebook"
               android:textColor="@color/black"
               android:textSize="30sp"
               android:textStyle="bold"
               android:layout_marginTop="10dp"/>
       </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/insButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/instagram"
            android:scaleType="fitXY"
            android:background="@null"
            android:layout_margin="10dp"
            />
        <TextView
            android:id="@+id/txtView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Instagram"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/gmailButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/gmaillogo"
            android:scaleType="fitXY"
            android:background="@null"
            android:layout_margin="10dp"
            />
        <TextView
            android:id="@+id/txtView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="demofood@gmail.com"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>
    </LinearLayout>


    <TextView
        android:id="@+id/txtView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone number: 09xxxxxxx"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        />
    <TextView
        android:id="@+id/txtView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Copyright @ 2021 Bản quyền thuộc về Nhật và Đạt"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:layout_marginTop="350dp"
        />
</LinearLayout>